---
import Card from 'components/Card.astro';

type Props = {
    authorName: String,
    date: String,
    class: String
}

const { class: className, authorName, date } = Astro.props
---
<Card class:list={['testimonial-card', className]}>
    <h4>{authorName}</h4>
    <div class="subtitle">
        {[...Array(5)].map(() => <span class="fa fa-star checked"/>)}
        <small>{date}</small>
        <p>
            <slot/>
        </p>
    </div>
</Card>

<style lang="scss">
    .checked {
        color: orange;
        font-size: 13px;
        margin-right: 3px;
    }

    .testimonial-card {
        h4 {
            margin: 5px 0;
        }

        .subtitle {
            small {
                display: inline-block;
                margin: 0;
                color: gray;
            }
        }

        overflow: hidden;
        max-width: 300px;
    }
</style>
